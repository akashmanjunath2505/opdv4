{
  "name": "opd-platform",
  "private": true,
  "description": "OPD Platform hosted at opd.aivanahealth.com",
  "version": "1.0.0",
  "author": "Aivana Health",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:all": "concurrently \"npm run dev\" \"npm run server:dev\"",
    "build": "vite build",
    "preview": "vite preview",
    "server": "tsx server/index.ts",
    "server:dev": "tsx watch server/index.ts",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder --win --x64",
    "electron:build:portable": "npm run build && electron-builder --win portable --x64",
    "package:exe": "npm run build && electron-builder --win --x64"
  },
  "dependencies": {
    "@google/genai": "^1.19.0",
    "@stripe/stripe-js": "^8.7.0",
    "@supabase/supabase-js": "^2.93.3",
    "@tailwindcss/typography": "^0.5.19",
    "@vercel/blob": "^2.0.1",
    "autoprefixer": "^10.4.24",
    "dotenv": "^17.2.3",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hot-toast": "^2.6.0",
    "stripe": "^20.3.0",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "tsx": "^4.21.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^7.2.0"
  }
}
